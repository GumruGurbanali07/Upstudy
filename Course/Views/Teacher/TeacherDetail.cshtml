@model Teacher
@{
    ViewData["Title"] = Model.TeacherName;
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<!-- Page Banner Start -->
<div class="section page-banner-section" style="background-image: url(assets/images/bg/page-banner.jpg);">
    <div class="shape-1">
        <img src="~/upstudy/assets/images/shape/shape-7.png" alt="">
    </div>
    <div class="shape-2">
        <img src="~/upstudy/assets/images/shape/shape-1.png" alt="">
    </div>
    <div class="shape-3"></div>
    <div class="container">
        <div class="page-banner-wrap">
            <div class="row">
                <div class="col-lg-12">
                    <!-- Page Banner Content Start -->
                    <div class="page-banner text-center">
                        <h2 class="title">@Model.TeacherName</h2>
                        <ul class="breadcrumb justify-content-center">
                            <li class="breadcrumb-item"><a href="/Home/Index">Home</a></li>
                            <li class="breadcrumb-item"><a href="/Teacher/Index">Our Teachers</a></li>
                            <li class="breadcrumb-item active" aria-current="page">@Model.TeacherName</li>
                        </ul>
                    </div>
                    <!-- Page Banner Content End -->
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Page Banner End -->
<!-- Team Profile Start -->
<div class="section upstudy-team-profile-section section-padding">
    <div class="container">
        <div class="team-profile-wrap">
            <div class="row">
                <div class="col-lg-3">
                    <!-- Team Profile Start -->
                    <div class="team-profile text-center">
                        <div class="profile-img">
                            <img src="@Model.TeacherImage" alt="">
                        </div>
                        <div class="profile-content">
                            <h4 class="name">@Model.TeacherName</h4>
                            <p class="designation">@Model.Speciality</p>
                            
                            @await Component.InvokeAsync("TeacherDetailSocialPartialComponent", new {id=Model.TeacherId})
                        </div>
                    </div>
                    <!-- Team Profile End -->
                </div>
                <div class="col-lg-9">
                    <!-- Team Profile Description Wrap Start -->
                    <div class="team-profile-description-wrap">
                        <!-- Team Profile Info Start -->
                        <div class="team-profile-info">
                            <ul>
                                <li class="team-info">
                                    <span class="title">Full Name </span> <span>:</span>
                                    <p>@Model.TeacherName</p>
                                </li>
                                
                                <li class="team-info">
                                    <span class="title">Expertise </span> <span>:</span>
                                    <p>@Model.Speciality</p>
                                </li>
                            </ul>
                        </div>
                        <!-- Team Profile Info End -->
                        <!-- Team Profile Description Start -->
                        <div class="team-profile-description">
                            @Html.Raw(Model.Description)
                        </div>
                        <!-- Team Profile Description End -->
                        
                    </div>
                    <!-- Team Profile Description Wrap End -->
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Team Profile End -->

