@model List<Teacher>

@{
    ViewData["Title"] = "Teachers";
    ViewData["TeacherA"] = "active-menu";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<!-- Page Banner Start -->
<div class="section page-banner-section" style="background-image: url(assets/images/bg/page-banner.jpg);">
    <div class="shape-1">
        <img src="~/upstudy/assets/images/shape/shape-7.png" alt="">
    </div>
    <div class="shape-2">
        <img src="~/upstudy/assets/images/shape/shape-1.png" alt="">
    </div>
    <div class="shape-3"></div>
    <div class="container">
        <div class="page-banner-wrap">
            <div class="row">
                <div class="col-lg-12">
                    <!-- Page Banner Content Start -->
                    <div class="page-banner text-center">
                        <h2 class="title">Our Teachers</h2>
                        <ul class="breadcrumb justify-content-center">
                            <li class="breadcrumb-item"><a href="/Home/Index">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Our Teachers</li>
                        </ul>
                    </div>
                    <!-- Page Banner Content End -->
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Page Banner End -->
<!-- Team Start -->
<div class="section upstudy-team-section section-padding">
    <div class="container">
        <div class="team-wrap">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-lg-3 col-sm-6">
                        <!-- Single Team Start -->
                        <div class="single-team-02">
                            <div class="team-img">
                                <a href="#"><img src="@item.TeacherImage" alt=""></a>
                            </div>
                            <div class="team-content text-center">
                                <div class="team-social">
                                    @await Component.InvokeAsync("SocialListCoursePagePartialComponent", new { id = item.TeacherId })
                                </div>
                                <h3 class="name"><a href="/Teacher/TeacherDetail/@item.TeacherId">@item.TeacherName</a></h3>
                                <p class="designation">@item.Speciality</p>
                            </div>
                        </div>
                        <!-- Single Team End -->
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<!-- Team End -->
