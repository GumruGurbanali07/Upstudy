@model LoginDTO
@{
    Layout = null;
}

<!DOCTYPE html>
<!-- Coding by CodingLab | www.codinglabweb.com-->
<html lang="en" dir="ltr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Login | My Course</title>
    <link rel="icon" type="image/x-icon" href="~/favicon.png" />
    <link rel="stylesheet" href="~/Responsive Registraion or Sign up Form/style.css">
</head>
<body>
    <div class="wrapper">
        <h2>Login</h2>
        <form method="post">
            <div class="input-box">
                <input asp-for="Username" type="text" placeholder="Enter your username" required>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="input-box">
                <input asp-for="Password" type="password" placeholder="Enter your password" required>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="input-box button">
                <input type="Submit" value="Login">
            </div>
            <div class="text">
                <h3>You don't have an account?<a href="/Register/Index">Register now</a></h3>
            </div>
        </form>
    </div>

</body>
</html>
