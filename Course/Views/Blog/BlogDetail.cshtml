@model Blog
@{
    ViewData["Title"] = "Blog Detail";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<!-- Page Banner Start -->
<div class="section page-banner-section" style="background-image: url(/upstudy/assets/images/bg/page-banner.jpg);">
    <div class="shape-1">
        <img src="~/upstudy/assets/images/shape/shape-7.png" alt="">
    </div>
    <div class="shape-2">
        <img src="~/upstudy/assets/images/shape/shape-1.png" alt="">
    </div>
    <div class="shape-3"></div>
    <div class="container">
        <div class="page-banner-wrap">
            <div class="row">
                <div class="col-lg-12">
                    <!-- Page Banner Content Start -->
                    <div class="page-banner text-center">
                        <h2 class="title">@Model.BlogTitle</h2>
                        <ul class="breadcrumb justify-content-center">
                            <li class="breadcrumb-item"><a href="/Home/Index">Home</a></li>
                            <li class="breadcrumb-item"><a href="/Blog/Index">Blogs</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Blog Details</li>
                        </ul>
                    </div>
                    <!-- Page Banner Content End -->
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Page Banner End -->
<!-- Blog Details Start -->
<div class="section blog-details-section section-padding">
    <div class="container">
        <!-- Blog Details Wrap Start -->
        <div class="blog-details-wrap">
            <div class="row">
                <div class="col-lg-12">
                    <!-- Blog Details Post Start -->
                    <div class="blog-details-post">
                        <!-- Single Blog Start -->
                        <div class="single-blog-post single-blog">
                            <div class="blog-image">
                                <a><img style="height:500px; width:500px" src="@Model.Image" alt=""></a>
                            </div>
                            <div class="blog-content">
                                <div class="blog-meta">
                                    <span><i class="fa-solid fa-user"></i> <a href="/Teacher/TeacherDetail/@Model.TeacherId">@Model.Teacher.TeacherName</a></span>
                                    <span><i class="fa-solid fa-list"></i> <a href="#">@Model.BlogCategory.Name</a></span>
                                   
                               
                                </div>
                                <br />
                                <h3 class="title">@Model.BlogTitle</h3>
                                <p style="text-align:justify" class="text">@Html.Raw(Model.Description) </p>
                            
                            </div>
                        </div>
                        <!-- Single Blog End -->
                        
                    </div>
                    <!-- Blog Details Post End -->
                </div>
                
            </div>
        </div>
        <!-- Blog Details Wrap End -->     
    </div>
    
</div>
<!-- Blog Details End -->
