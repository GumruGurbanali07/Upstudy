@model List<Graduate>
@{
    ViewData["Title"] = "Our Graduates";
    ViewData["GraduateA"] = "active-menu";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<div class="section page-banner-section" style="background-image: url(/upstudy/assets/images/bg/page-banner.jpg);">
    <div class="shape-1">
        <img src="~/upstudy/assets/images/shape/shape-7.png" alt="">
    </div>
    <div class="shape-2">
        <img src="~/upstudy/assets/images/shape/shape-1.png" alt="">
    </div>
    <div class="shape-3"></div>
    <div class="container">
        <div class="page-banner-wrap">
            <div class="row">
                <div class="col-lg-12">
                    <!-- Page Banner Content Start -->
                    <div class="page-banner text-center">
                        <h2 class="title">Our Graduates</h2>
                        <ul class="breadcrumb justify-content-center">
                            <li class="breadcrumb-item"><a href="/Home/Index">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Our Graduates</li>
                        </ul>
                    </div>
                    <!-- Page Banner Content End -->
                </div>
            </div>
        </div>
    </div>
</div>
<br />
<!-- Course List Start -->
<div class="section section-padding">
    <div class="container">
        @foreach (var item in Model)
        {
            <div style="border:2px solid">
                <div style="padding:50px;display:flex">
                    <img src="@item.Image" width="150" style="border-radius:50%" />
                    <div style="margin-left:15px;margin-top:40px">
                        <h6>@item.Comment</h6>
                        <br />
                        <h4>@item.Name</h4>
                        <span>@item.CurrentWork</span>
                    </div>
                </div>

            </div>
            <br />
        }

    </div>
</div>
<br />
