@model RegisterDTO

@{
    Layout = null;
}

<!DOCTYPE html>
<!-- Coding by CodingLab | www.codinglabweb.com-->
<html lang="en" dir="ltr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Register | My Course</title>
    <link rel="icon" type="image/x-icon" href="~/favicon.png" />
    <link rel="stylesheet" href="~/Responsive Registraion or Sign up Form/style.css">
</head>
<body>
    <div class="wrapper">
        <h2>Registration</h2>
        <form method="post" enctype="multipart/form-data">
            <div class="input-box">
                <input asp-for="Image" onchange="document.getElementById('blah').src = window.URL.createObjectURL(this.files[0])" type="file" required>

                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <img style="margin-left:100px; border-radius:50%;" id="blah" alt="your image" width="100" height="100" />

            <div class="input-box">
                <input asp-for="Name" type="text" placeholder="Enter your name" required>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="input-box">
                <input asp-for="Surname" type="text" placeholder="Enter your surname" required>
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="input-box">
                <input asp-for="Username" type="text" placeholder="Enter your username" required>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="input-box">
                <input asp-for="Email" type="email" placeholder="Enter your email" required>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="input-box">
                <input asp-for="Password" type="password" placeholder="Enter your password" required>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="input-box button">
                <input type="Submit" value="Register Now">
            </div>
            <div class="text">
                <h3>Already have an account? <a href="/Login/Index">Login now</a></h3>
            </div>
        </form>
    </div>

</body>
</html>
