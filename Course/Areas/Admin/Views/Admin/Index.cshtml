
@using CourseApp.Context
@using CourseApp.Models

@model List<AppUser>
@{
    ViewData["Title"] = "Admins";
    Layout = "~/Areas/Admin/Views/Shared/_adminLayout.cshtml";
   
}


<div class="col-lg-12">
    <div class="ibox float-e-margins">
        <div class="ibox-title d-flex">
            <h5> Admins </h5>
            <a href="/Admin/Admin/CreateAdmin" style="margin-left: 1200px" class="btn btn-primary">Add Admin</a>

        </div>
        <!-- / ibox-title -->
        <div id="demo7" class="ibox-content collapse in">
            <div class="borderedTable">
                <div class="table-scrollable">
                    <table class="table table-striped table-bordered table-advance table-hover">
                        <thead>
                            <tr>
                                <th>Name </th>
                               
                                <th>Username </th>
                                <th>Email</th>
                                <th>Actions </th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                
                                <tr>
                                    <td class="highlight"><img src="@item.Image" style="margin-right:10px; height:50px;width:50px" />@item.Name @item.Surname</td>
                                    <td class="highlight">@item.UserName</td>
                                    <td class="highlight"><a href="mailto:@item.Email">@item.Email</a></td>


                                    <td>
                                        <a href="/Admin/Admin/DeleteAdmin/@item.Id" class="btn btn-outline-danger btn-round btn-sm purple"> <i class="fa-solid fa-trash"></i> Delete </a>
                                    </td>
                                </tr>
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

