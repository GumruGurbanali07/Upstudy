@using CourseApp.Models
@model About
@{
    ViewData["Title"] = "Abouts";
    Layout = "~/Areas/Admin/Views/Shared/_adminLayout.cshtml";
}

<div class="col-lg-12">
    <div class="ibox float-e-margins">
        <div class="ibox-title d-flex">
            <h5> Abouts </h5>
             <a href="/Admin/About/UpdateAbout/@Model.AboutId" style="margin-left: 1100px" class="btn btn-primary">Update About</a>
 
        </div>
        <!-- / ibox-title -->
        <div id="demo7" class="ibox-content collapse in">
            <div class="borderedTable">
                <div class="table-scrollable">
                    <table class="table table-striped table-bordered table-advance table-hover">
                        
                        <tbody>
                            <tr>
                                <th>Image</th>
                                <td><img src="@Model.Image" width="100" /></td>
                            </tr>
                            <tr>
                                <th>Title</th>
                                <td>@Model.AboutTitle</td>
                            </tr>
                            <tr>
                                <th>Description</th>
                                <td>@Model.AboutDescription</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

