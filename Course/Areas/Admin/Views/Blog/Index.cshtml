@using CourseApp.Models
@model List<Blog>
@{
    ViewData["Title"] = "Blog";
    Layout = "~/Areas/Admin/Views/Shared/_adminLayout.cshtml";
}

<div class="col-lg-12">
    <div class="ibox float-e-margins">
        <div class="ibox-title d-flex">
            <h5> Blogs </h5>
            <a href="/Admin/Blog/CreateBlog" style="margin-left: 1200px" class="btn btn-primary">Add Blog</a>

        </div>
        <!-- / ibox-title -->
        <div id="demo7" class="ibox-content collapse in">
            <div class="borderedTable">
                <div class="table-scrollable">
                    <table class="table table-striped table-bordered table-advance table-hover">
                        <thead>
                            <tr>
                                <th>Blog Title </th>
                                <th class="hidden-xs">Category </th>
                                <th> Teacher </th>
                                <th> Created Date </th>
                                <th>Status</th>
                                <th>Actions </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="highlight">@item.BlogTitle</td>
                                    <td class="hidden-xs">@item.BlogCategory.Name</td>
                                    <td>@item.Teacher.TeacherName</td>
                                    <td>@item.CreatedDate.ToString("MMMM dd, yyyy HH:mm")</td>
                                    <td>
                                        @if (item.IsActive)
                                        {
                                            <a href="/Admin/Blog/ChangeStatusToFalse/@item.BlogId">
                                                <span class="badge badge-success">Active</span>
                                            </a>
                                        }
                                        else
                                        {
                                            <a href="/Admin/Blog/ChangeStatusToTrue/@item.BlogId">
                                                <span class="badge badge-danger">Disactive</span>
                                            </a>
                                        }
                                    </td>
                                    <td>
                                        <a href="/Admin/Blog/UpdateBlog/@item.BlogId" class="btn btn-outline-primary btn-round btn-sm purple"> <i class="fa-solid fa-pen"></i> Edit </a>
                                        <a href="/Admin/Blog/DeleteBlog/@item.BlogId" class="btn btn-outline-danger btn-round btn-sm purple"> <i class="fa-solid fa-trash"></i> Delete </a>
                                    </td>
                                </tr>
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

