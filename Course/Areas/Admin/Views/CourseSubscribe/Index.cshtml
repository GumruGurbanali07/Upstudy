@using CourseApp.Models
@model List<CourseSubcribe>
@{
    ViewData["Title"] = "Course Subscribe";
    Layout = "~/Areas/Admin/Views/Shared/_adminLayout.cshtml";
}

<div class="col-lg-12">
    <div class="ibox float-e-margins">
        <div class="ibox-title d-flex">
            <h5> Course Subscribe </h5>
            <a href="/Admin/CourseSubscribe/CreateSubscriber" style="margin-left: 1200px" class="btn btn-primary">Add Subscribe</a>

        </div>
        <!-- / ibox-title -->
        <div id="demo7" class="ibox-content collapse in">
            <div class="borderedTable">
                <div class="table-scrollable">
                    <table class="table table-striped table-bordered table-advance table-hover">
                        <thead>
                            <tr>
                                <th>Course name </th>
                                <th>Subcribe Students</th>
                                <th>Add Subscriber </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="highlight">@item.Course.CourseName</td>

                                    <td><a href="/Admin/CourseSubscribe/StudentListByCourse/@item.CourseId" class="btn btn-primary">Students by Course</a></td>
                                    
                                    <td>
                                        <a href="/Admin/CourseSubscribe/AddSubscriber/@item.CourseId" class="btn btn-warning"><i class="fa-solid fa-plus"></i></a>
                                    </td>
                                </tr>
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

