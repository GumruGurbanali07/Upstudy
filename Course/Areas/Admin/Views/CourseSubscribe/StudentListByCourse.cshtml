@using CourseApp.Models
@model List<CourseSubcribe>

@{
    ViewData["Title"] = "Students By " + ViewBag.CourseName;
    Layout = "~/Areas/Admin/Views/Shared/_adminLayout.cshtml";
}

<div class="col-lg-12">
    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <h5> Students by @ViewBag.CourseName</h5>
            
        </div>
        <!-- / ibox-title -->
        <div id="demo7" class="ibox-content collapse in">
            <div class="borderedTable">
                <div class="table-scrollable">
                    <table class="table table-striped table-bordered table-advance table-hover">
                        <thead>
                            <tr>
                                <th>Student Name </th>
                                <th>Phone Number</th>
                                <th>Email</th>
                                <th>Birthdate</th>
                                <th>Status</th>
                                <th>Actions </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="highlight">@item.Student.StudentName</td>
                                    <td class="highlight"><a href="tel:@item.Student.PhoneNumber">@item.Student.PhoneNumber</a></td>
                                    <td class="highlight"><a href="mailto:@item.Student.Email">@item.Student.Email</a></td>
                                    <td class="highlight">@item.Student.BirthDate.ToString("MMMM dd, yyyy")</td>

                                    <td>
                                        @if (item.Student.IsActive)
                                        {
                                            <a href="/Admin/Student/ChangeStatusToFalse/@item.StudentId">
                                                <span class="badge badge-success">Active</span>
                                            </a>
                                        }
                                        else
                                        {
                                            <a href="/Admin/Student/ChangeStatusToTrue/@item.StudentId">
                                                <span class="badge badge-danger">Disactive</span>
                                            </a>
                                        }
                                    </td>
                                    <td>
                                        <a href="/Admin/CourseSubscribe/DeleteSubscriber/@item.CourseSubcribeId" class="btn btn-outline-danger btn-round btn-sm purple"> <i class="fa-solid fa-trash"></i> Delete </a>
                                    </td>
                                </tr>
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

