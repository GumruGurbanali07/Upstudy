@using CourseApp.Models
@model CourseSubcribe
@addTagHelper*,Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Create Subscriber";
    Layout = "~/Areas/Admin/Views/Shared/_adminLayout.cshtml";
}

<div class="col-lg-12 top20">
    <div class="widgets-container">


        <h5>Add Subscriber</h5>
        <hr>
        <form method="post">
            <div class="row">
                <div class="col-md-4">
                    <select asp-for="CourseId" asp-items="@ViewBag.Courses" class="form-control"></select>

                </div>
                <div class="col-md-4">
                    <select asp-for="StudentId" asp-items="@ViewBag.Students" class="form-control"></select>

                </div>

            </div>
            <br />
            <button class="btn btn-primary" type="submit">Save</button>
        </form>
    </div>
</div>

