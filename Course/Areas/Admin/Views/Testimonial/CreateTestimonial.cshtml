@using CourseApp.Areas.Admin.Models.TestimonialDTO
@model CreateTestimonialDTO
@addTagHelper*,Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Create Testimonial";
    Layout = "~/Areas/Admin/Views/Shared/_adminLayout.cshtml";
}

<div class="col-lg-12 top20">
    <div class="widgets-container">


        <h5>Create Testimonial</h5>
        <hr>
        <form method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-4">
                    <input asp-for="TestimonialName" class="form-control" placeholder="Testimonial name" type="text">
                    <span asp-validation-for="TestimonialName" class="text-danger"></span>

                </div>

                <div class="col-md-4">
                    <input asp-for="TestimonialImage" class="form-control" type="file">
                    <span asp-validation-for="TestimonialImage" class="text-danger"></span>

                </div>               
            </div>
            <br />
            <div class="row">
                <div class="col-md-12">
                    <textarea asp-for="TestimonialDescription" rows="6" class="form-control" placeholder="Testimonial description"></textarea>
                    <span asp-validation-for="TestimonialDescription" class="text-danger"></span>

                </div>
            </div>
            <br />
            <button class="btn btn-primary" type="submit">Save</button>
        </form>
    </div>
</div>

