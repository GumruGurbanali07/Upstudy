@using CourseApp.Models
@model List<Testimonial>
@{
    ViewData["Title"] = "Testimonials";
    Layout = "~/Areas/Admin/Views/Shared/_adminLayout.cshtml";
}

<div class="col-lg-12">
    <div class="ibox float-e-margins">
        <div class="ibox-title d-flex">
            <h5> Testimonials </h5>
            <a href="/Admin/Testimonial/CreateTestimonial" style="margin-left: 1100px" class="btn btn-primary">Add Testimonial</a>

        </div>
        <!-- / ibox-title -->
        <div id="demo7" class="ibox-content collapse in">
            <div class="borderedTable">
                <div class="table-scrollable">
                    <table class="table table-striped table-bordered table-advance table-hover">
                        <thead>
                            <tr>
                                <th>Name </th>                              
                                <th>Status</th>
                                <th>Actions </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="highlight"><img src="@item.TestimonialImage" style="margin-right: 10px; height:50px; width:50px"    />@item.TestimonialName</td>


                                    <td>
                                        @if (item.IsActive)
                                        {
                                            <a href="/Admin/Testimonial/ChangeStatusToFalse/@item.TestimonialId">
                                                <span class="badge badge-success">Active</span>
                                            </a>
                                        }
                                        else
                                        {
                                            <a href="/Admin/Testimonial/ChangeStatusToTrue/@item.TestimonialId">
                                                <span class="badge badge-danger">Disactive</span>
                                            </a>
                                        }
                                    </td>
                                    <td>
                                        <a href="/Admin/Testimonial/UpdateTestimonial/@item.TestimonialId" class="btn btn-outline-primary btn-round btn-sm purple"> <i class="fa-solid fa-pen"></i> Edit </a>
                                        <a href="/Admin/Testimonial/DeleteTestimonial/@item.TestimonialId" class="btn btn-outline-danger btn-round btn-sm purple"> <i class="fa-solid fa-trash"></i> Delete </a>
                                    </td>
                                </tr>
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

