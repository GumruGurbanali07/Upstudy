@using CourseApp.Models
@model List<Courses>
@{
    ViewData["Title"] = "Courses";
    Layout = "~/Areas/Admin/Views/Shared/_adminLayout.cshtml";
}

<div class="col-lg-12">
    <div class="ibox float-e-margins">
        <div class="ibox-title d-flex">
            <h5> Courses </h5>
            <a href="/Admin/Course/CreateCourse" style="margin-left: 1200px" class="btn btn-primary">Add Course</a>

        </div>
        <!-- / ibox-title -->
        <div id="demo7" class="ibox-content collapse in">
            <div class="borderedTable">
                <div class="table-scrollable">
                    <table class="table table-striped table-bordered table-advance table-hover">
                        <thead>
                            <tr>
                                <th>Course Name </th>
                                <th class="hidden-xs">Category </th>
                                <th> Teacher </th>
                                <th> Price </th>
                                <th>Status</th>
                                <th>Actions </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="highlight">@item.CourseName</td>
                                    <td class="hidden-xs">@item.CourseCategory.CourseCategoryName</td>
                                    <td>@item.Teachers.TeacherName</td>
                                    <td>@item.Price</td>
                                    <td>
                                        @if (item.IsActive)
                                        {
                                            <a href="/Admin/Course/ChangeStatusToFalse/@item.CourseId">
                                            <span class="badge badge-success">Active</span></a>
                                        }
                                        else
                                        {
                                            <a href="/Admin/Course/ChangeStatusToTrue/@item.CourseId">
                                            <span class="badge badge-danger">Disactive</span></a>
                                        }
                                    </td>
                                    <td>
                                        <a href="/Admin/Course/UpdateCourse/@item.CourseId" class="btn btn-outline-primary btn-round btn-sm purple"> <i class="fa-solid fa-pen"></i> Edit </a>
                                        <a href="/Admin/Course/DeleteCourse/@item.CourseId" class="btn btn-outline-danger btn-round btn-sm purple"> <i class="fa-solid fa-trash"></i> Delete </a>
                                    </td>
                                </tr>
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

