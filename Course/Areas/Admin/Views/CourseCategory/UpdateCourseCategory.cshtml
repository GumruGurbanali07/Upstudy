@using CourseApp.Areas.Admin.Models.CourseCategoryDTOs
@model UpdateCourseCategoryDTO
@addTagHelper*,Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Update Category";
    Layout = "~/Areas/Admin/Views/Shared/_adminLayout.cshtml";
}

<div class="col-lg-12 top20">
    <div class="widgets-container">


        <h5>Update Teacher</h5>
        <hr>
        <form method="post" enctype="multipart/form-data">
            <input asp-for="CourseCategoryId" hidden />
            <div class="row">
                <div class="col-md-4">
                    <input asp-for="CourseCategoryName" class="form-control" placeholder="Category name" type="text">
                    <span asp-validation-for="CourseCategoryName" class="text-danger"></span>

                </div>
                <div class="col-md-4">
                    <input asp-for="Icon" class="form-control" placeholder="Icon" type="text">
                    <span asp-validation-for="Icon" class="text-danger"></span>

                </div>
            </div>
            <br />
            <button class="btn btn-primary" type="submit">Save</button>
        </form>
    </div>
</div>

