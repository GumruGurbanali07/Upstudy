@using CourseApp.Areas.Admin.Models.GraduateDTOs
@model UpdateGraduateDTO
@addTagHelper*,Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Update Graduate";
    Layout = "~/Areas/Admin/Views/Shared/_adminLayout.cshtml";
}

<div class="col-lg-12 top20">
    <div class="widgets-container">


        <h5>Update Graduate</h5>
        <hr>
        <form method="post" enctype="multipart/form-data">
            <input asp-for="GraduateId" hidden />
            <div class="row">
                <div class="col-md-4">
                    <input asp-for="Name" class="form-control" placeholder="Graduate name" type="text">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>


                <div class="col-md-4">
                    <input asp-for="Image" class="form-control" type="file">
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="row">


                <div class="col-md-8">
                    <input asp-for="CurrentWork" class="form-control" placeholder="Graduate CurrentWork" type="text">
                    <span asp-validation-for="CurrentWork" class="text-danger"></span>
                </div>
            </div>

            <br />
            <div class="row">
                <div class="col-md-4">
                    <textarea asp-for="Description" placeholder="Description" rows="8" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <textarea asp-for="Comment" class="form-control" rows="8" placeholder="Graduate Comment"></textarea>
                    <span asp-validation-for="Comment" class="text-danger"></span>
                </div>
            </div>
            <br />

            <button class="btn btn-primary" type="submit">Save</button>
        </form>
    </div>
</div>

