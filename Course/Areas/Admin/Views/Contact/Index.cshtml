@using CourseApp.Models
@model List<Contact>
@{
    ViewData["Title"] = "Contacts";
    Layout = "~/Areas/Admin/Views/Shared/_adminLayout.cshtml";
}

<div class="col-lg-12">
    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <h5> Contacts </h5>

        </div>
        <!-- / ibox-title -->
        <div id="demo7" class="ibox-content collapse in">
            <div class="borderedTable">
                <div class="table-scrollable">
                    <table class="table table-striped table-bordered table-advance table-hover">
                        <thead>
                            <tr>
                                <th>Name </th>                           
                                <th>Email</th>
                                <th>Subject</th>
                                <th>Messages</th>
                                <th>Delete</th>

                                
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="highlight">@item.Name</td>                                    
                                    <td class="highlight"><a href="mailto:@item.Email">@item.Email</a></td>
                                    <td class="highlight">@item.Subject</td>
                                    <td class="highlight">@item.Message</td>
                                   
                                    <td>
                                        <a href="/Admin/Contact/DeleteContact/@item.ContactId" class="btn btn-outline-danger btn-round btn-sm purple"> <i class="fa-solid fa-trash"></i> Delete </a>
                                    </td>
                                </tr>
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

