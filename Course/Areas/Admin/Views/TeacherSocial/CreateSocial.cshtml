@using CourseApp.Models
@model TeacherSocial
@addTagHelper*,Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Create Social";
    Layout = "~/Areas/Admin/Views/Shared/_adminLayout.cshtml";
}

<div class="col-lg-12 top20">
    <div class="widgets-container">


        <h5>Create Social</h5>
        <hr>
        <form method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-4">
                    <input asp-for="SocialTitle" class="form-control" placeholder="Social Title" type="text">
                    <span asp-validation-for="SocialTitle" class="text-danger"></span>

                </div>
                <div class="col-md-4">
                    <input asp-for="Icon" class="form-control" placeholder="Icon" type="text">
                    <span asp-validation-for="Icon" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-4">
                    <input asp-for="ScoialLink" class="form-control" placeholder="Social Link" type="text">
                    <span asp-validation-for="ScoialLink" class="text-danger"></span>

                </div>
                <div class="col-md-4">
                    <input asp-for="TeacherId" hidden value="@ViewBag.SocialId">                   
                </div>
            </div>
            <br />
            <button class="btn btn-primary" type="submit">Save</button>
        </form>
    </div>
</div>

