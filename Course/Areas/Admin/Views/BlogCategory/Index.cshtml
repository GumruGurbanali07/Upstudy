@using CourseApp.Models
@model List<BlogCategory>
@{
    ViewData["Title"] = "Blog Categories";
    Layout = "~/Areas/Admin/Views/Shared/_adminLayout.cshtml";
}

<div class="col-lg-12">
    <div class="ibox float-e-margins">
        <div class="ibox-title d-flex">
            <h5> Blog Categories </h5>
            <a href="/Admin/BlogCategory/CreateBlogCategory" style="margin-left: 900px" class="btn btn-primary">Add Category</a>

        </div>
        <!-- / ibox-title -->
        <div id="demo7" class="ibox-content collapse in">
            <div class="borderedTable">
                <div class="table-scrollable">
                    <table class="table table-striped table-bordered table-advance table-hover">
                        <thead>
                            <tr>
                                <th>Category Name </th>
                                <th>Status</th>
                                <th>Actions </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="highlight">@item.Name</td>


                                    <td>
                                        @if (item.IsDeleted)
                                        {
                                            <a href="/Admin/BlogCategory/ChangeStatusToFalse/@item.BlogCategoryId">
                                                <span class="badge badge-success">Active</span>
                                            </a>
                                        }
                                        else
                                        {
                                            <a href="/Admin/BlogCategory/ChangeStatusToTrue/@item.BlogCategoryId">
                                                <span class="badge badge-danger">Disactive</span>
                                            </a>
                                        }
                                    </td>
                                    <td>
                                        <a href="/Admin/BlogCategory/UpdateBlogCategory/@item.BlogCategoryId" class="btn btn-outline-primary btn-round btn-sm purple"> <i class="fa-solid fa-pen"></i> Edit </a>
                                        <a href="/Admin/BlogCategory/DeleteBlogCategory/@item.BlogCategoryId" class="btn btn-outline-danger btn-round btn-sm purple"> <i class="fa-solid fa-trash"></i> Delete </a>
                                    </td>
                                </tr>
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

